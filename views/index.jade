extends /layout
//- - var pages = [{title: 'Content Blocks & Structures', navTitle: 'Blocks', url: 'guide/blocks', desc: 'These larger-level structures work well from mobile to desktop extra-wide, and have many options like padding, image backgrounds, and color classes.'}, {title: 'Typography', navTitle: 'Type', url: 'guide/typography', desc: 'Basic typography styles and formatting.'}, {title: 'Components', navTitle: 'Components', url: 'guide/components', desc: 'Cards and other elements.'}]

block prepend title
    - var pageTitle = ' | Larger Structures'

block content
    include /_includes/_data
    include /_partials/_nav-mobile
    main.full-width.full-height.align-middle.masthead.container-image-fill(data-interchange='[./img/data-distortion-textures-@1x.png, small], [img/data-distortion-textures-@2x.png, large]')
        include /_partials/_nav-primary
        .row.align-center
            .columns.small-12.medium-8
                .row
                    .column
                        h1.header-masthead Style Guide & Examples
                        h2.masthead--subheader Built with #[a(href="https://spike.readme.io/docs/getting-started")Spike] & Webpack. Templates with #[a(href="http://jade-lang.com/")Jade] & Markdown.
                        p.lead Below are a few demo pages from the Echo II Guide project.
                .row.small-up-1.medium-up-2.large-up-3
                    each page, n in pages
                        .column
                            .callout
                                a(href=page.url, title='Explore ' + page.title)
                                    h4= page.title
                                p= page.desc


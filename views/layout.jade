doctype html
html

    head
        block meta
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
            meta(name='description', content='')
            meta(name='author', content= "allanwhite")
            //- uncomment if your site is responsive!
            meta(name="viewport" content="width=device-width, initial-scale=1")

        block title
            //- use `block prepend title` in the child template to pass `pageTitle` before this item
            - var defaultTitle = 'Echo II Demos'
            - var theTitle = pageTitle
            title #{defaultTitle}#{theTitle}

        block stylesheets
            link(rel='stylesheet', href='/css/app.css')
            link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,700,700i', rel='stylesheet')


    body
        block content
        
        block footer

        block javascript
            script(src='/js/dist/all.js')
            script(src='/js/app.js')

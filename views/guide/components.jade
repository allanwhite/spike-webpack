extends /layout
include /_includes/_mixins

block prepend title
    - var pageTitle = ' | Components'

block content
    include /_partials/_nav-mobile
    header.masthead.container-image-fill(data-interchange='[/img/data-distortion-textures-@1x.png, small], [img/data-distortion-textures-@2x.png, large]')
        include /_partials/_nav-primary

        .row
            .small-12.columns
                h1.header-masthead Components & Objects
                h2.masthead--subheader Complex structures
    main
        section.section-article.container-color--gray-light
            .row
                .columns.small-12.section-article--header-group
                    h1.section-article--header Person Cards
                    hr.divider
                    h3 Uses the flexbox n-up grid, and are responsive
                    .row.small-up-2.large-up-4.group
                        .column.media-object.card-person.stack-for-small
                            .media-object-section
                                img.avatar.avatar--large.circle(src='/img/people-profiles/prof-madeleine.jpg')
                            .media-object-section.main-section.align-self-middle
                                h4.person-name Lobelia Proudfoot
                                p.person-title Dreams feel real while we're in them.
                        .column.media-object.card-person.stack-for-small
                            .media-object-section
                                img.avatar.avatar--large.circle(src='/img/people-profiles/prof-mark.jpg')
                            .media-object-section.main-section.align-self-middle
                                h4.person-name Bran Buckwind III
                                p.person-title I Can Stack.
                        .column.media-object.card-person.stack-for-small
                            .media-object-section
                                img.avatar.avatar--large.circle(src='/img/people-profiles/prof-kgrieger.jpg')
